<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
   		android:summary=""
   		android:title="Preference" >
        <CheckBoxPreference
        android:key="lock_control"
        android:summary="Control music from lockscreen (for android 4.2+)"
        android:title="Lockscreen control" />
        <CheckBoxPreference
        android:key="lock_album"
        android:summary="Show album art on lock screen (only avalible when turn on lockscreen control)"
        android:title="Lockscreen album art" />
         <CheckBoxPreference
        android:key="stack_blur"
        android:summary="EXPERIMENTAL FEATURE, MAY CAUSES PROBLEMS. Use stack blur for blur background rendering"
        android:title="Use Stack Blur" />
   	</PreferenceCategory>
    <PreferenceCategory
   		android:summary=""
   		android:title="About" >
        <PreferenceScreen android:key="cm_updates"
                android:title="Help" >
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.ngxson.music"
                    android:targetClass="com.ngxson.music.HelpActivity" />
        </PreferenceScreen>
        <PreferenceScreen android:key="cm_updates"
                android:title="About" >
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.ngxson.music"
                    android:targetClass="com.ngxson.music.About" />
        </PreferenceScreen>
   	</PreferenceCategory>
</PreferenceScreen>